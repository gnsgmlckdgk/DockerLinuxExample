
docker run --name [컨터에너명] -v [볼륨호스트:볼륨도커서버] --privileged -d [이미지(도커파일빌드한이미지)] (/usr/sbin/init => 도커파일 CMD에 넣어놔서 생략 가능)

# 이미지 컨테이너 올리기
docker run --privileged --name centos8 -d  centos8_min
docker run --name centos8_base -v "/Users/hch/Files/Dev/Docker/Edu/linux/centos8/edu/root/data/root/data" --privileged -d centos8:base
docker run --name centos_edu -v "/Users/hch/Files/Dev/Docker/Edu/linux/centos8/root:/data/root/data" --privileged -d centos_edu:latest /usr/sbin/init

# 컨터이너에 접근
docker exec -it centos_edu /bin/bash